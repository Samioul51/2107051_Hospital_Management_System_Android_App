<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/uibg">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Items"
        android:textSize="20sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        />

    <TextView
        android:id="@+id/drop2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Item Type from following Dropdown Menu"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />
    <!-- Inventory Type Spinner -->
    <Spinner
        android:id="@+id/inventoryTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/inventory_types"
        android:hint="Select Item Type"
        android:minHeight="48dp"
        android:background="@color/dropdown"

        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/itemNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:fontFamily="@font/amarante"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/itemDescriptionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Description"
        android:fontFamily="@font/amarante"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/itemQuantityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="number"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:fontFamily="@font/amarante"
        android:minHeight="48dp"

        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:text="Add Item"
        android:textColor="@color/black"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"/>

</LinearLayout>
