<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/uibg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Staffs Informations"
        android:textSize="20sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/drop2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Staff Category from following Dropdown Menu"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:minHeight="48dp"
        android:background="@color/dropdown"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/dropTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Staff from following Dropdown Menu"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <Spinner
        android:id="@+id/staffSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:minHeight="48dp"
        android:background="@color/dropdown"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:hint="Staff Name"
        android:minHeight="48dp"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:hint="Phone Number"
        android:minHeight="48dp"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:hint="Email"
        android:minHeight="48dp"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/nidInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:hint="NID"
        android:minHeight="48dp"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/addressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:hint="Address"
        android:minHeight="48dp"
        android:backgroundTint="@color/box"
        android:background="@color/box"
        android:textColorHint="@color/font"
        android:textColor="@color/font"
        android:padding="12dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/updateStaffButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:text="Update"
        android:backgroundTint="@color/button"
        android:textColor="@color/black"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"/>
</LinearLayout>
