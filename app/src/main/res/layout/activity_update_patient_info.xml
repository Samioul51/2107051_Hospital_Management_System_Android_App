<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/uibg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_patients_informations"
            android:textSize="24sp"
            android:textColor="@color/font"
            android:fontFamily="@font/amarante"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/drop2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Patient from following Dropdown Menu"
            android:textSize="14sp"
            android:textColor="@color/font"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            />

        <Spinner
            android:id="@+id/patientSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@color/dropdown"
            android:backgroundTint="@color/dropdown"
            android:fontFamily="@font/amarante"
            android:minHeight="48dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:hint="Patient Name"
            android:minHeight="48dp"
            android:backgroundTint="@color/box"
            android:background="@color/box"
            android:textColorHint="@color/font"
            android:textColor="@color/font"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:hint="Phone Number"
            android:minHeight="48dp"
            android:backgroundTint="@color/box"
            android:background="@color/box"
            android:textColorHint="@color/font"
            android:textColor="@color/font"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/addressInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:hint="Address"
            android:minHeight="48dp"
            android:backgroundTint="@color/box"
            android:background="@color/box"
            android:textColorHint="@color/font"
            android:textColor="@color/font"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/dobInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:fontFamily="@font/amarante"
            android:hint="Date of Birth"
            android:minHeight="48dp"
            android:backgroundTint="@color/box"
            android:background="@color/box"
            android:textColorHint="@color/font"
            android:textColor="@color/font"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/updatePatientButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:text="Update"
            android:backgroundTint="@color/button"
            android:textColor="@color/black"
            android:fontFamily="@font/amarante"/>
    </LinearLayout>
</ScrollView>
