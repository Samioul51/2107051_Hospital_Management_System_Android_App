<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/uibg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_staffs"
        android:textSize="20sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/drop2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Staff Category from following Dropdown Menu"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <Spinner
        android:id="@+id/staffTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dropdown"
        android:background="@color/button"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dropTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Staff  from following Dropdown Menu"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <Spinner
        android:id="@+id/staffSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dropdown"
        android:background="@color/button"
        android:minHeight="48dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/deleteStaffButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:text="Delete"
        android:backgroundTint="@color/button"
        android:textColor="@color/black"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp" />
</LinearLayout>
