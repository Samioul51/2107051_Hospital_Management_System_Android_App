<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/uibg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/delete_doctor_unassign_scheduler"
        android:textSize="20sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/drop2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Doctor from following Dropdown Menu"
        android:textSize="14sp"
        android:textColor="@color/font"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />

    <Spinner
        android:id="@+id/doctorSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/dropdown"
        android:backgroundTint="@color/dropdown"
        android:fontFamily="@font/amarante"
        android:minHeight="48dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/deleteDoctorButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:text="Delete"
        android:backgroundTint="@color/button"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/amarante"/>

    <Button
        android:id="@+id/unassignSchedulerButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/amarante"
        android:padding="12dp"
        android:text="@string/unassign_scheduler"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

</LinearLayout>